{
  "manifest_version": 3,
  "name": "AI Assistant Sidebar",
  "version": "1.2",
  "description": "AI chatbot assistant with multiple model support",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs",
    "scripting",
    "tabCapture",
    "desktopCapture"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://openrouter.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Assistant"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}